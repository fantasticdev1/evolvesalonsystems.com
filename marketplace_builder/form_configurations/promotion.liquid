---
name: promotion
resource: Customization
resource_owner: anyone
configuration:
  properties:
    image_url:
    title:
      validation:
        presence: true
    description:
    date:
    detail_link:
    featured:
---
{% assign f = form_builder.fields.properties -%}
{% form -%}
	{% include 'forms/fieldGroup', field: f.image_url, type: 'text', label: 'ImageURL' -%}
  {% include 'forms/fieldGroup', field: f.title, type: 'text', label: 'Title' -%}
  {% include 'forms/fieldGroup', field: f.date, type: 'date', label: 'Date' -%}
	{% include 'forms/fieldGroup', field: f.detail_link, type: 'text', label: 'Detail Link' -%}
  {% include 'forms/checkbox', field: f.featured, label: 'Featured' -%}
	<input type="submit" class="button">
{% endform -%}

