{%- comment -%}Product Types{%- endcomment -%}
{%- query_graph 'model_records', name:'product_type', result_name: g -%}
{%- assign models = g.customizations.results -%}
{%- for model in models -%}
	{%- capture modelIndexBy -%}{{modelIndexBy}}
			"/admin/products?type={{model.id}}":{{forloop.index0}}{%- unless forloop.last -%},{%- endunless -%}
	{%- endcapture -%}
	{%- capture modelItems -%}{{modelItems}}
		{
			"name": "{{model.properties.name}}",
			"slug": "/admin/products?type={{model.id}}"
		}{%- unless forloop.last -%},{%- endunless -%}
	{%- endcapture -%}
{%- endfor -%}
{
	"name": "Admin",
	"nav": {
		"indexBy": {
			"slug": {
				"/admin/dashboard": 0,
				"/admin/pages": 1,
				"/admin/crm": 2,
				"/admin/certificates": 3,
				"/admin/brands": 4,
				"/admin/products": 5,
				"/admin/orders": 6
			}
		},
		"items": [{
			"name": "Dashboard",
			"icon": "fal fa-chart-pie fa-fw",
			"slug": "/admin/dashboard"
		}, {
			"name": "Pages",
			"icon": "fal fa-file fa-fw",
			"slug": "/admin/pages"
		}, {
			"name": "CRM",
			"icon": "fal fa-address-card fa-fw",
			"slug": "/admin/crm"
		}, {
			"name": "certificates",
			"icon": "fal fa-file-certificate fa-fw",
			"slug": "/admin/certificates"
		}, {
			"name": "brands",
			"icon": "fal fa-stamp fa-fw",
			"slug": "/admin/brands"
		}, {
			"name": "products",
			"icon": "fal fa-cut fa-fw",
			"slug": "/admin/products",
			"nested": {
				"indexBy": {
					"slug": {
						{{modelIndexBy}}
					}
				},
				"items": [{{modelItems}}]
			}
		}, {
			"name": "orders",
			"icon": "fal fa-shopping-cart fa-fw",
			"slug": "/admin/orders"
		}]
	}
}
