
{%- query_graph 'get_events', result_name: 'g', page: 1, per_page: 3 -%}

<h1 class="flex-center">{{meta.title}}</h1>
<h2 class="flex-center">{{meta.description}}</h2>
<br><br><br>
<h2 class="flex-center">{{meta.tableHeading}}</h2>
<hr>

{% for event in g.customizations.results %}
  {%- assign properties = event.properties  -%}
  <div style="display:flex;justify-content:space-between;">
    <img src="{{properties.image_url}}" style="width:50px;height:50px;border-radius:50%;">
    <h2>{{properties.start_date}}</h2>
    <h2>{{properties.title}}</h2>
    <button class="medium">Details</button>
  </div>
  <hr>
{% endfor %}

<h2 class="flex-center">
  <a href="/events">{{meta.viewAllEvents}}</a>
</h2>
