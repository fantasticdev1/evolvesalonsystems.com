<!-- Modal login -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="container">
					<div class="row">
						<div class="col">
							<h1 class="title">Log into EvolveSystem</h1>
							<h5 class="instructions">Enter your login details below</h5>
							<form>
								<input type="text" name="email" placeholder="EMAIL ADDRESS">
								<input type="password" name="password" placeholder="PASSWORD">
								<a href="#" data-toggle="modal" data-target="#forgot-pass-modal" data-dismiss="modal">FORGOT YOUR PASSWORD?</a>
								<button class="button-wide" type="submit">SIGN IN</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<span><a href="#">Don't have an accout?</a><button class="button-wide" data-toggle="modal" data-target="#signup-modal" data-dismiss="modal">CREATE ACCOUNT</button></span>
			</div>
		</div>
	</div>
</div>
<!-- Modal forgot password -->
<div class="modal fade" id="forgot-pass-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="container">
					<div class="row">
						<div class="col">
							<h1 class="title">Forgot password?</h1>
							<h5 class="instructions">We'll send you a link to reset it</h5>
							<form>
								<input type="text" name="email" placeholder="REGISTERED EMAIL">
								<button class="button-wide" type="submit">RESET</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<span><a href="#">Know your password?</a><button class="button-wide" data-toggle="modal" data-target="#login-modal" data-dismiss="modal">LOGIN</button></span>
			</div>
		</div>
	</div>
</div>
<!-- Register Modal -->
<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="container">
					<div class="row">
						<div class="col">
							<h1 class="title">Log into EvolveSystem</h1>
							<h5 class="instructions">Enter your login details below</h5>
							<form>
								<input type="text" name="full-name" placeholder="YOURNAME">
								<input type="text" name="email" placeholder="EMAIL ADDRESS">
								<input type="password" name="password" placeholder="PASSWORD">
								<span><input class="checkbox" type="checkbox" name="terms" value="agreement"><a href="#">I agree to the terms</a></span>
								<button class="button-wide" type="submit">SIGN UP</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<span><a href="#">Have an account?</a><button class="button-wide" data-toggle="modal" data-target="#login-modal" data-dismiss="modal">LOGIN</button></span>
			</div>
		</div>
	</div>
</div>
{% endunless -%}
<!-- cart Modal -->
<div class="modal fade" id="cart-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title font-gothamMedium">Your cart</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
